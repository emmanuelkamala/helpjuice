<p style="color: green"><%= notice %></p>

<%= form_with(url: articles_path, method: :get, data: {controller: "search-form", turbo_frame: "articles", turbo_action: "advance"}) do |form| %>

  <%= form.label :query, "Search by article title:", class: "search__title" %>
  <div class="form">
    <%= form.text_field :query, class: "form__input" %>

    <%= form.submit 'Search', class: "form__button" %>
  </div>
<% end %>

<h1>Articles</h1>
<div id="articles">
  <% @articles.map do |article| %>
  <ul class="list">
    <li class="list__links"><%= link_to article.title, article_path(article), class: "article__title" %></li>
  </ul>
  <% end %>
</div>

